<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ninebythree.nutriscanph">

    <uses-sdk />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NutriScanPh"
        tools:targetApi="31">
        <activity
            android:name=".authentication.NotVerifiedActivity"
            android:exported="false" />
        <activity
            android:name=".object.StillImageActivity"
            android:exported="false" />
        <activity
            android:name=".activity.Edit_Profile"
            android:exported="false" />
        <activity
            android:name=".activity.Profile"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.SignUp"
            android:exported="false" />

        <uses-native-library
            android:name="libOpenCL.so"
            android:required="false" />
        <uses-native-library
            android:name="libOpenCL-car.so"
            android:required="false" />
        <uses-native-library
            android:name="libOpenCL-pixel.so"
            android:required="false" />

        <activity
            android:name=".authentication.Login"
            android:exported="false" />
        <activity
            android:name=".authentication.ForgetPasswordEmailSent"
            android:exported="false" />
        <activity
            android:name=".authentication.ForgotPassword"
            android:exported="false" />
        <activity
            android:name=".detection.DetectorActivity"
            android:theme="@style/AppTheme.ObjectDetection" />
        <activity
            android:name=".authentication.GetStarted"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.NutriScanPh">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>