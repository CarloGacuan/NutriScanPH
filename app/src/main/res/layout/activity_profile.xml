<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".activity.Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:text="Profile"
            android:fontFamily="@font/montserratsemibold"
            android:textColor="@color/black"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEdit"
            style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTint="@color/primary"
            android:fontFamily="@font/montserratsemibold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:stateListAnimator="@null"
            android:text="Edit"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            app:icon="@drawable/edit"
            app:iconTint="@color/black"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:backgroundTint="@color/light_accent_2"
            app:cornerRadius="7dp"
            app:rippleColor="@color/secondary"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="40dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgProfile"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/profile"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:scaleType="fitXY"
            app:shapeAppearance="?attr/actionButtonStyle"
            app:shapeAppearanceOverlay="@style/imageViewRounded"
            app:strokeColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            >

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carlos Miguel Gacuan"
                android:textAlignment="textStart"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="carlosmiguelgacuan@gmail.com"
                android:textAlignment="textStart"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginVertical="7dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/light_accent_2"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/secondary"
                android:textSize="19sp"
                />

            <TextView
                android:id="@+id/txtHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150 cm"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:textSize="19sp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginVertical="7dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/light_accent_2"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/secondary"
                android:textSize="19sp"
                />

            <TextView
                android:id="@+id/txtWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 kg"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:textSize="19sp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginVertical="7dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/light_accent_2"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/secondary"
                android:textSize="19sp"
                />

            <TextView
                android:id="@+id/txtBMI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:textSize="19sp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>