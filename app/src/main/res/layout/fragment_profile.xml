<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/green"
    android:orientation="vertical"
    tools:context=".fragment.Profile">

    <LinearLayout
        android:paddingTop="40dp"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/drawable_profile"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carlos Miguel Gacuan"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/secondary"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="carlosmiguelgacuan@gmail.com"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/gray_accent"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5pt"
            android:gravity="center">

            <LinearLayout
                android:layout_marginVertical="10pt"
                android:paddingBottom="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 cm"
                    android:fontFamily="@font/montserratsemibold"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:gravity="center"
                    android:fontFamily="@font/montserratsemibold"
                    android:textColor="@color/gray_accent"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="10pt"
                android:paddingBottom="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/drawable_profile2"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150 cm"
                    android:fontFamily="@font/montserratsemibold"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height (cm)"
                    android:gravity="center"
                    android:fontFamily="@font/montserratsemibold"
                    android:textColor="@color/gray_accent"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="10pt"
                android:paddingBottom="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 cm"
                    android:fontFamily="@font/montserratsemibold"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight (Kg)"
                    android:gravity="center"
                    android:fontFamily="@font/montserratsemibold"
                    android:textColor="@color/gray_accent"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10pt"
            android:id="@+id/BMIlayout"
            android:layout_width="100pt"
            android:layout_height="100pt"
            android:background="@drawable/profile_circle_green"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your BMI"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/gray_accent"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/txtBMI"
                android:layout_marginVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23.57"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/green"
                android:layout_alignParentRight="true"
                android:textSize="40sp"
                />

            <TextView
                android:id="@+id/txtClassify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                />

        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProfile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="-37.5dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/profile_bg"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearance="?attr/actionButtonStyle"
        app:shapeAppearanceOverlay="@style/imageViewRounded20"
        app:strokeColor="@android:color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEdit"
        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:layout_margin="5pt"
        android:fontFamily="@font/montserratbold"
        android:text="Edit your Profile"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:backgroundTint="@color/gray_accent"
        app:cornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:rippleColor="@color/white"
        app:strokeColor="@color/black"
        app:strokeWidth="0dp"
        tools:layout_editor_absoluteX="14dp" />

</androidx.constraintlayout.widget.ConstraintLayout>